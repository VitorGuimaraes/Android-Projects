<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF9800"
    android:minHeight="110dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name_view"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="Luna" />

        <TextView
            android:id="@+id/breed_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_field"
            android:text="Breed: "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/breed_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_field"
            android:layout_toRightOf="@id/breed_view"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="DÃ¡lmata" />

        <TextView
            android:id="@+id/age_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/breed_view"
            android:text="Age: "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/age_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/breed_field"
            android:layout_toRightOf="@id/age_view"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="2" />

        <TextView
            android:id="@+id/weight_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_view"
            android:text="Weight: "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/weight_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_view"
            android:layout_toRightOf="@id/weight_view"
            android:text="3kg"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rating_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_view"
            android:text="Rating: "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight_view"
            android:layout_toRightOf="@id/rating_view"
            android:numStars="5"
            android:progressBackgroundTint="#fb8c00"
            android:progressTint="#ffeb3b"
            android:rating="2"
            android:stepSize="1.0" />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="#FF6F00"
            android:text="Remove" />

        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/removeButton"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:background="#FF6F00"
            android:text="Edit" />

    </RelativeLayout>
</LinearLayout>